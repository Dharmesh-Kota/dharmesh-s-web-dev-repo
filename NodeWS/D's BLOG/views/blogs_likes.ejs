<div id="likes">
    <% if(locals.user){%>
        <a href="/blogs/likes/up/<%=locals.topic%>" id="up_vote" data-likes="<%=blog.likes.length%>"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>
    <% } %>
    <span id="counter"><%=blog.likes.length%> Likes</span>
    <% if(locals.user){%>
        <a href="/blogs/likes/down/<%=locals.topic%>" id="down_vote" data-likes="<%=blog.likes.length%>"><i class="fa fa-chevron-down"  aria-hidden="true"></i></a>
    <% } %>
</div>

<script src="/js/blogs_likes.js"></script>